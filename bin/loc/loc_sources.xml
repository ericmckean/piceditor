	<source>server/loc/en_US/*.txt</source>
	<source>server/loc/en_US/*.properties</source>
	<source>loc/misc/en_US/*.html</source>
	<source>website/graphics/en_US/*.gif</source>
	<source>website/graphics/en_US/*.png</source>
	<source>website/graphics/en_US/*.swf</source>
