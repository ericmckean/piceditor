<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas width="100%" height="100%" horizontalScrollPolicy="off" verticalScrollPolicy="off"
		xmlns:filters="flash.filters.*" xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:ctl="controls.*" xmlns:thumbnails="controls.thumbnails.*">
	<mx:Boolean id="_fShowTryIt">{AccountMgr.GetInstance().isPremium}</mx:Boolean>
	<mx:Script>
		<![CDATA[
			import dialogs.DialogManager;
			import util.LocUtil;
			import util.Navigation;
			
			[Bindable] public var active:Boolean = false;
			
			private function FeatureClick(): void {
				// UNDONE:
				//	Better sample image
				// 	can we open directly to Stars and/or Hearts?
				//	does ShowUpgrade()'s argument need a more shapely suffix than 'featuredpremium'?
				if (_fShowTryIt || AccountMgr.GetInstance().isPremium) {
					Navigation.DispatchNavEvent(this, PicnikBase.EDIT_CREATE_TAB, '_ctFeatured', null, null);
				} else {
					DialogManager.ShowUpgrade('/home_welcome/featured/HalloweenTextures');					
				}
			}
		]]>
	</mx:Script>
	
	<mx:Style>
		.barGradientBlack {
			border-style: solid;
			border-thickness: 0;
			border-skin: ClassReference("skins.GradientBackground");
			gradient-fill-colors: #000000, #000000;
			gradient-fill-alphas: .9,.5;
			gradient-fill-ratios: 0,150;
			gradient-rotation: 0;
		}
	</mx:Style>

	<filters:DropShadowFilter id="_fiDropShad" blurX="2" blurY="2" distance="1" color="#000000" alpha=".35" quality="3" angle="90"/>
	<filters:DropShadowFilter id="_fiWhiteShad" blurX="1" blurY="1" distance="1" color="#FFFFFF" alpha="1" quality="3" angle="90"/>
	<filters:GlowFilter id="_fiGlow" alpha=".2" blurX="10" blurY="10" color="#ffffff"/>
	<filters:GlowFilter id="_bluGlow" alpha=".4" blurX="20" blurY="20" color="#005580"/>
	
	<!-- contents -->
	<mx:VBox width="100%" height="100%" horizontalAlign="center">
		<!-- right col copy -->
		<!--<mx:VBox width="100%" verticalGap="0" clipContent="false" horizontalScrollPolicy="off" verticalScrollPolicy="off">
			
		</mx:VBox>-->
		<!-- photos -->
		<mx:Canvas  cornerRadius="8" width="100%" height="100%" clipContent="true" bottom="0" left="0" horizontalScrollPolicy="off" verticalScrollPolicy="off">
			<thumbnails:Thumbnail source="/graphics/welcome/featured/HalloweenTextures2010.swf" width="100%" height="100%" verticalCenter="-1"
				animating="{active}" maxWidth="615" maxHeight="230" cornerRadius="8" bottomCornerRadius="0"/>
			<mx:Box styleName="barGradientBlack" width="100%" height="{copy.height+6}" bottom="0" left="0" />
			
			<!-- try it button goes in here, only shown to premium folk -->
			<mx:VBox bottom="13" right="10" verticalAlign="middle" verticalGap="0" horizontalScrollPolicy="off" verticalScrollPolicy="off"
					 includeInLayout="{_fShowTryIt}" visible="{_fShowTryIt}">
				<ctl:ResizingButton autoFontSizeGap="1"
					label="@Resource(key='tryItNow', bundle='FeaturedFeatures')"
					styleName="basketButton" maxWidth="170"
					fontSize="20" height="36" minWidth="130" click="FeatureClick()"/>
			</mx:VBox>
			
			<!-- upgrade / try it now button goes in here, shown to non-premium folk -->
			<mx:VBox bottom="3" right="16" horizontalAlign="center" verticalAlign="middle" verticalGap="0" horizontalScrollPolicy="off" verticalScrollPolicy="off"
					includeInLayout="{!_fShowTryIt}" visible="{!_fShowTryIt}">
				<ctl:ResizingButton autoFontSizeGap="1"
					label="@Resource(key='upgradeNow', bundle='FeaturedFeatures')" 
					styleName="basketButtonBlue" 
					fontSize="20" height="36" minWidth="150" maxWidth="170" click="FeatureClick()"/>
				<mx:Label htmlText="@Resource(key='tryItNow', bundle='FeaturedFeatures')" width="100%" styleName="subheadSmall" textAlign="center"
					fontWeight="bold" color="#d6efb2" filters="{[_fiDropShad]}" fontSize="16"
					buttonMode="true" selectable="true" mouseEnabled="true"
					mouseChildren="false" click="Navigation.DispatchNavEvent(this, PicnikBase.EDIT_CREATE_TAB, '_ctFeatured', null, null);"/>
			</mx:VBox>
			
			<mx:VBox bottom="4" left="10" right="170" width="100%" verticalGap="0" clipContent="false" horizontalScrollPolicy="off" verticalScrollPolicy="off" id="copy">
				<ctl:LabelPlus text="@Resource(key='HalloweenTexturesIntro', bundle='FeaturedFeatures')" styleName="h1FeaturedLight" filters="{[_fiDropShad]}"/>
				<ctl:TextPlus htmlText="@Resource(key='HalloweenTexturesSubhead', bundle='FeaturedFeatures')" styleName="subheadFeaturedLight" paddingTop="-6" width="100%" paddingRight="10" filters="{[_fiDropShad]}"/>
			</mx:VBox>
			
			<!--<mx:VBox left="10" bottom="2" verticalGap="-8" width="{_vbx1.x - 10}">
				<ctl:LabelPlus color="#005580" fontSize="18" htmlText="@Resource(key='TouchUp3Intro', bundle='FeaturedFeatures')" filters="{[_fiWhiteShad]}" width="100%" autoFontSizeGap="1"/>
				<ctl:LabelPlus color="#3B87B2" fontSize="16" htmlText="@Resource(key='TouchUp3Subhead', bundle='FeaturedFeatures')" width="100%" paddingRight="10" filters="{[_fiWhiteShad]}" autoFontSizeGap="1"/>	
			</mx:VBox>-->
		</mx:Canvas>
	</mx:VBox>

</mx:Canvas>
